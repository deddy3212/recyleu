<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ke1"
            android:textColor="@color/hitam"
            android:textSize="20sp"
            android:gravity="center"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pemesanan Kamu Sudah Berhasil"/>

        <TextView
            android:padding="5dp"
            android:layout_below="@+id/ke1"
            android:id="@+id/ke2"
            android:textColor="@color/hitam"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Silahkan Tunggu Beberapa Saat. Admin sedang mengkonfirmasi pesanan kamu!"/>

        <TextView
            android:id="@+id/ke3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ke2"
            android:text="Kontak Akmi jika ada masalah ke nomor"/>
        <Button
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/putih"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:id="@+id/bt1"
            android:text="Lihat Tiket Kamu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ke3"/>

        <Button

            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/putih"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:id="@+id/bt2"
            android:text="Kembali Ke Beranda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt1"/>



    </RelativeLayout>

</androidx.core.widget.NestedScrollView>