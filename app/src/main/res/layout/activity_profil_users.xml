<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.Dashboard_Admin">


    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@color/colorPrimaryDark">

            <ImageView
                android:id="@+id/gambarsampul"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="180dp" />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/editan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_edit_black_24dp" />




        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="100dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/avatarId"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_person_black_24dp"
                app:civ_border_width="1dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/nameTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selamat Datang"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="20sp"
                    android:textColor="@color/putih"/>

                <TextView
                    android:id="@+id/emailTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/putih"/>
                <TextView
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/putih"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:padding="10dp"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            android:id="@+id/ly1"
            android:layout_marginTop="225dp"
            android:layout_width="150dp"
            android:layout_height="158dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/NotifikasiUser"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="10dp"
                android:src="@drawable/ic_notifications_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="E-Tiket Terbaru"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="@color/lightgray" />


        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:background="@color/green"
            android:layout_below="@+id/ly1"
            android:id="@+id/ly2"
            android:layout_marginTop="-158dp"
            android:layout_marginLeft="170dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_width="150dp"
            android:layout_height="158dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/NotifikasiUserlama"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="10dp"
                android:src="@drawable/ic_notifications_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Lihat E-Tiket Lama"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="@color/lightgray" />


        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/ly1"
            android:padding="10dp"
            android:background="@color/jeruk"
            android:layout_marginLeft="20dp"
            android:id="@+id/ly3"
            android:layout_marginTop="10dp"
            android:layout_width="150dp"
            android:layout_height="158dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/NotifikasiUser3"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="10dp"
                android:src="@drawable/ic_notifications_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Menunggu"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="@color/lightgray" />


        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:background="@color/colorPrimaryDark"
            android:layout_below="@+id/ly1"
            android:id="@+id/ly4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="170dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_width="150dp"
            android:layout_height="158dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/metu"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="10dp"
                android:src="@drawable/ic_call_missed_outgoing_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Keluar"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="@color/lightgray" />


        </LinearLayout>




    </RelativeLayout>






</androidx.core.widget.NestedScrollView>

