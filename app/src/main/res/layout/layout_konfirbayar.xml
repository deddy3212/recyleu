<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="vertical">

        <!--EditText Input text Judul Postingan-->

     <TextView
         android:layout_marginTop="10dp"
         android:gravity="center"
         android:textColor="@color/hitam"
         android:text="Silahkan Admin Mengkonfirmasi di laman ini!"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"/>



        <TextView
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/hitam"
            android:textStyle="normal"
            android:text="Status Pembeli :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/statsusnya"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="-45dp"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:text="Belum Bayar"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <Button
            android:id="@+id/blmbayar"
            android:layout_width="wrap_content"
            android:text="Belum Bayar"
            android:textColor="@color/merah"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/sdhbyar"
            android:textColor="@color/colorPrimary"
            android:text="Sudah Bayar"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="-49dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/kadaluwarsa"
            android:text="Kadaluwarsa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



        <!--EditText Input text Judul Postingan-->


        <!--Button publish Postingan ke Firebase-->
        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btn_upload_konfir"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:text="Konfirmasi"
            android:textColor="#fff"
            android:background="@color/colorPrimary"
            android:layout_gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/postsRecyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>



    </LinearLayout>






</androidx.core.widget.NestedScrollView>