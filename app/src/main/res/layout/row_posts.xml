<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_marginBottom="36dp"
    app:cardBackgroundColor="@color/colorPrimary">

    <androidx.cardview.widget.CardView
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/uPictureTV"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:src="@drawable/ic_person_black_24dp" />

            <LinearLayout
                android:background="@color/putih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/uNameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/pTimeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="33 min" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/pJudulTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grid"
        android:autoLink="all"
        android:text="Judul"
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <com.borjabravo.readmoretextview.ReadMoreTextView
        android:id="@+id/pIsiPostinganTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pJudulTV"
        android:layout_marginTop="5dp"
        android:text="sadar dan "
        android:textColor="#000"
        android:justificationMode="inter_word"
        app:trimExpandedText="Show More"
        app:trimCollapsedText="show less"
        app:trimMode="trimModeLength"
        app:trimLength="200"
        app:colorClickableText="@color/colorPrimary"/>


    <ImageView
        android:id="@+id/pImageTV"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/pIsiPostinganTV"
        android:background="#fff" />

    <TextView
        android:id="@+id/baca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pImageTV"
        android:layout_alignEnd="@+id/garis"
        android:layout_alignRight="@+id/garis"
        android:layout_marginLeft="3dp"

        android:layout_marginTop="7dp"
        android:textStyle="normal"
        android:background="#fff"
        android:textColor="#000"
        android:textSize="17sp"
         />

    <View
        android:layout_marginTop="5dp"
        android:id="@+id/garis"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/baca"
        />







    <View
        android:layout_marginTop="15dp"
        android:id="@+id/garis2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/frametombol" />

</RelativeLayout>