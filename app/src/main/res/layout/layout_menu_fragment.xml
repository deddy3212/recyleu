<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/putih"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/perta"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/logozo"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="170dp">
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/perta">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Menu Untuk Anda"/>


    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="15dp"
        android:layout_marginTop="220dp"
       android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <androidx.cardview.widget.CardView
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView

                android:id="@+id/image_fasilitas"
                android:layout_width="65dp"
                android:layout_height="66dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/jeruk"
                android:padding="10dp"
                android:src="@drawable/ic_assignment_black_24dp" />

            <TextView
                android:layout_marginTop="65dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fasilitas"
                android:textColor="#000"
                android:textSize="12sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/image_peta"
                android:layout_width="65dp"
                android:layout_height="66dp"
                android:layout_marginLeft="135dp"
                android:background="@drawable/circlebackgroundpurple"
                android:padding="10dp"
                android:src="@drawable/ic_supervisor_account_black_24dp" />

            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="125dp"
                android:layout_marginTop="65dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atraksi Interaksi"
                android:textColor="#000"
                android:textSize="12sp" />


            <ImageView
                android:id="@+id/image_rekreasi"
                android:layout_width="65dp"
                android:layout_height="66dp"
                android:layout_marginLeft="250dp"
                android:background="@drawable/teh"
                android:padding="10dp"
                android:src="@drawable/ic_event_black_24dp" />

            <TextView
                android:layout_marginTop="65dp"
                android:layout_marginLeft="259dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rekreasi"
                android:textColor="#000"
                android:textSize="12sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="15dp"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="85dp">

    <androidx.cardview.widget.CardView
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_konservasi"
            android:layout_width="65dp"
            android:layout_height="66dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/circlebackgroundblue"
            android:padding="10dp"
            android:src="@drawable/ic_location_city_black_24dp" />

        <TextView
            android:layout_marginTop="65dp"
            android:layout_marginLeft="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Konservasi"
            android:textColor="#000"
            android:textSize="12sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/image_tentang"
            android:layout_width="65dp"
            android:layout_height="66dp"
            android:layout_marginLeft="135dp"
            android:background="@drawable/lihat"
            android:padding="10dp"
            android:src="@drawable/ic_info_black_24dp" />

        <TextView

            android:layout_marginLeft="145dp"
            android:layout_marginTop="65dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tentang"
            android:textSize="12sp"
            android:textColor="#000"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/image_kontak"
            android:layout_width="65dp"
            android:layout_height="69dp"
            android:layout_marginLeft="250dp"
            android:background="@drawable/deletee"
            android:padding="10dp"
            android:src="@drawable/ic_call_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="248dp"
            android:layout_marginTop="67dp"
            android:text="Kontak Kami"
            android:textSize="12sp"
            android:textColor="#000"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    </LinearLayout>

    </RelativeLayout>